<div class="row subject_status mt-3 mb-3">
  <div class="col-2 align-items-center d-flex">
    <%= task_status.task_name %>
  </div>
  <div class="col-8 align-items-center d-flex">
    <%= task_status.task_description %>
  </div>
  <div class="col-2">
    <% if task_status.start? %>
      <%= form_tag status_path, method: :patch, remote: true do %>
        <%= hidden_field_tag :status_id, task_status.id %>
        <%= hidden_field_tag :status, :finished %>
        <%= submit_tag t(get_status_text), class: "btn btn-primary btn-greeny my-2",
            disabled: !can?(:update, task_status) %>
      <% end %>
    <% else %>
      <h5 class="mb-0">
        <span class="badge bg-info my-2 py-3 px-2"><%= t "done_status" %></span>
      </h5>
    <% end %>
  </div>
</div>
