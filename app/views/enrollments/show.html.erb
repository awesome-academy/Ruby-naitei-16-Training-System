<%= render "shared/course_info" %>
<%= render "shared/tab_header" %>
<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-subjects" role="tabpanel" aria-labelledby="nav-subjects-tab">
    <div class="subject-container">
      <h3><%= t "subjects_list" %></h3>
      <%= render partial: "subject_status", collection: @subject_statuses%>
    </div>
  </div>
  <div class="tab-pane fade course-details" id="nav-trainees" role="tabpanel" aria-labelledby="nav-trainees-tab">
    <%= render partial: "courses/users_list", locals: {users: @course.enrollments, is_trainees: true,
    list_name: t("trainees_list"), body_id: "trainees_tb_body", path: nil} %>
  </div>
  <div class="tab-pane fade course-details" id="nav-supervisors" role="tabpanel" aria-labelledby="nav-supervisors-tab">
    <%= render partial: "courses/users_list", locals: {users: @course.supervisions, is_trainees: false,
    list_name: t("supervisors_list"), body_id: "trainees_tb_body", path: nil} %>
  </div>
</div>
