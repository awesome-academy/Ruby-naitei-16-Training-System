<% provide :title, t(".signup") %>
<% provide :button_text, t(".signup") %>

<div class="center-container__auth user-signup">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= t ".signup" %></h4>
      
      <%= form_for @user do |f| %>
        <%= render "shared/error_messages", object: f.object %>

        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control mb-2" %>

        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control mb-2" %>

        <div class="d-flex mb-2">
          <% User.roles.keys.each do |role| %>
            <% if role != "admin" %>
              <div class="me-auto">
                <%= f.radio_button :role, role, class: "form-check-input" %>
                <%= f.label role.to_sym %>
              </div>
            <% end %>
          <% end %>
        </div>

        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control mb-2" %>

        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control mb-2" %>
        
        <div class="d-grid gap-2 col-6 mx-auto mt-3">
          <%= f.submit yield(:button_text), class: "btn btn-primary btn-greeny" %>
        </div>
      <% end %>

      <p class="mt-3"><%= t ".has_acc" %> <%= link_to t("sessions.new.login"), new_user_session_path %></p>
    </div>
  </div>
</div>
