<tr class="subjects">
  <td><%= supervision_counter + 1 %></td>
  <td><%= supervision.user_name %></td>
  <td><%= supervision.user_email %></td>
  <td>
    <% if can?(:update, supervision) && current_user != supervision.user %>
      <%= link_to supervision, method: :delete, remote: true, data: {confirm: t("delete_confirm")},
      class: "text-danger", data: {"mdb-toggle": "tooltip"}, title: t("delete") do %>
        <i class="fa fa-trash-alt me-3"></i>
      <% end %>
    <% end %>
  </td>
</tr>
